<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <style>
      .input {
        margin-right: 10%;
        padding-top: 2%;
        padding-bottom: 2%;
      }
      .brick {
        background-color: rgb(240, 106, 110);
        color: white;
      }
      .white {
        color: white;
      }
      .background {
        background-color: rgb(48, 62, 71);
        padding: 1%;
        text-align: center;
      }
      .flex {
        display: flex;
      }
      .active {
        text-decoration: line-through;
        color: rgb(255, 62, 62);
      }
    </style>

    <title>Lista produktów</title>
  </head>
  <body>
    <div
      class="container background col-sm-12 col-md-6 col-lg-3 justify-content-center"
    >
      <h1 class="white">Lista produktów</h1>

      <% products.forEach(product => { %>
      <div class="white" style="font-size: 24px">
        <div class="flex" style="display: inline">
          <div class="<%= product.green == true ? 'active' : '' %>">
            <%= product.name %>
          </div>
        </div>

        <form
          style="display: inline"
          action="/products/delete/<%= product._id %>?_method=DELETE"
          method="DELETE"
        >
          <input type="hidden" name="_method" value="DELETE" />
          <button type="submit" class="btn btn-sm brick">
            <i class="bi bi-trash"></i>
          </button>
        </form>

        <form
          style="display: inline"
          action="/products/update/<%= product._id %>?_method=UPDATE"
          method="UPDATE"
        >
          <input type="hidden" name="_method" value="UPDATE" />
          <button
            class="btn btn-sm"
            style="background-color: rgb(129, 137, 244); color: white"
          >
            Zaznacz/Odznacz
          </button>
        </form>
      </div>
      <% }); %>

      <form action="/products" method="POST" style="margin-top: 6%">
        <input
          style="text-align: center"
          class="form-control input"
          type="text"
          name="name"
          placeholder="Produkt"
          required
        />
        <button
          type="submit"
          class="btn btn-sm col-12"
          style="
            background-color: rgb(129, 137, 244);
            color: white;
            margin-top: 6%;
          "
        >
          Dodaj
        </button>
      </form>
    </div>
  </body>
</html>
